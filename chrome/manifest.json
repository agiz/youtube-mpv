{
  "name": "Play with mpv",
  "description": "Play youtube videos with mpv.",
   "icons": {
      "16": "icons/mpv-logo-16.png",
      "48": "icons/mpv-logo-48.png",
      "128": "icons/mpv-logo-128.png"
   },
  "version": "0.2",
  "permissions": ["contextMenus", "tabs"],
  "background": {
    "scripts": ["ytdl_config.py", "ytdl_client.js"]
  },
  "manifest_version": 2,
  "commands": {
    "play" : {
        "suggested_key": {
             "default": "Ctrl+Shift+S"
        },
        "description": "Play video using mpv"
    }
  }
}
